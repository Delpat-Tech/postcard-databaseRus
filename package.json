{
  "name": "proof-approve",
  "version": "1.0.17",
  "description": "Proof & Approve Postcard system (Express + MongoDB)",
  "main": "api/src/index.js",
  "scripts": {
    "start": "node api/src/index.js",
    "dev:backend": "nodemon api/src/index.js",
    "seed-admin": "cd api && node scripts/seedAdmin.js",
    "seed-dummy": "cd api && node scripts/seedDummyData.js",
    "reset-seed": "node api/scripts/resetSeed.js",
    "dev:frontend": "cd frontend && vite --config vite.config.ts",
    "build:frontend": "cd frontend && vite build --config vite.config.ts",
    "preview:frontend": "cd frontend && vite preview --config vite.config.ts --host 0.0.0.0 --port 5173",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "bump-version": "node scripts/bump-version.js"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@paypal/react-paypal-js": "^8.9.2",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.9",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "chalk": "4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.548.0",
    "mongoose": "^8.18.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "puppeteer": "^24.23.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "sweetalert2": "^11.26.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "zustand": "^5.0.8"
  }
}
